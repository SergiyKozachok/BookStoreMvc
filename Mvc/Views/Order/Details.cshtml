<table class="table">
    <tr>
        <th>Book Title</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>

    @foreach (var item in Model.OrderDetails)
    {
        if (item.OrderId == Model.Id)
         {
             <tr>
                 <td>@item.Book.Title</td>
                 <td>@item.Quantity</td>
                 <td>@item.Price</td>
             </tr>
         }
    }

</table>
