@model TransferLayer.Models.BookDto

@{
    ViewBag.Title = "Details";
}

<div class="container main-container">
    <div class="row">
        <!-- Gallery Items
        ================================================== -->
        <div class="span12 gallery-single">
            <div class="row">
                <div class="span2">
                    <img src="@($"data:image/jpg;base64,{Model.Image}")" class="align-left thumbnail" alt="@Html.DisplayFor(model => model.Title)"/>
                </div>
                <div class="span10">
                    <h2>@Html.DisplayFor(model => model.Title)</h2>
                    <h4>
                        @Html.DisplayFor(model => model.AuthorName)
                        @Html.DisplayFor(model => model.AuthorLastName)
                    </h4>
                    <p>@Html.DisplayFor(model => model.Description)</p>
                    <ul class="project-info">
                        <li><h6>Ціна:</h6> @Html.DisplayFor(model => model.Price)</li>
                        <li><h6>Кількість:</h6> @Html.DisplayFor(model => model.Count)</li>
                        <li><h6>Жанр:</h6> @Html.DisplayFor(model => model.CategoryName)</li>
                    </ul>
                    <button class="btn btn-inverse pull-left" type="button">Visit Website</button>
                    <a href="~/Books/Index" class="pull-right"><i class="icon-arrow-left"></i>Повернутися до книг </a>
                </div>
            </div>
        </div><!-- End gallery-single-->
    </div><!-- End container row -->

</div> <!-- End Container -->
